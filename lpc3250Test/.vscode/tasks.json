{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Makefile",
            "type": "shell",
            "command": "make",
            "args":[
                "PLT=Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Run Application",
            "type": "shell",
            "command": "export LD_LIBRARY_PATH=../sharedlibs/Debug;./Debug/lpc3250Test", // Replace with your run command
            "dependsOn": "Build with Makefile", // Ensure build task completes before running
            "group": {
                "kind": "test",
                "isDefault": true // This marks it as the default test task
            },
            "presentation": {
                "reveal": "always",
                "echo": true,
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
